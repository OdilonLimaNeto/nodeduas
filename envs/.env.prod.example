# Production Environment Configuration
# This file should be created during deployment with real values
# Never commit this file to version control

# Environment
NODE_ENV=production

# Server Configuration
PORT=3000

# Database (Replace with actual production database URL)
# Example: postgresql://username:password@host:port/database
DATABASE_URL="postgresql://user:password@production-db-host:5432/production_db"

# JWT Configuration (Use strong secrets in production - minimum 32 characters)
# Generate strong secrets: openssl rand -base64 32
JWT_SECRET="your-super-secure-jwt-secret-key-minimum-32-characters"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_SECRET="your-super-secure-refresh-secret-key-minimum-32-characters"
JWT_REFRESH_EXPIRES_IN="7d"

# AWS S3 Configuration (Production values)
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID="your-production-access-key-id"
AWS_SECRET_ACCESS_KEY="your-production-secret-access-key"
AWS_S3_BUCKET_NAME="your-production-s3-bucket-name"

# S3 Module Paths (Customizable folder structure)
S3_PRODUCTS_PATH="products"
S3_USERS_PATH="users"
S3_MATERIALS_PATH="materials"

# Upload Configuration (1-10 images, 1-50MB)
MAX_IMAGES_PER_PRODUCT=3
ALLOWED_FILE_TYPES="jpg,jpeg,png,webp"
MAX_FILE_SIZE_MB=5

# Production specific configurations
LOG_LEVEL=info
