# Development Environment Configuration
# This file is used for local development with Docker

# Environment
NODE_ENV=development

# Server Configuration
PORT=3000

# Database (Docker container)
DATABASE_URL="postgresql://postgres:password@db:5432/nodeduasapi"

# JWT Configuration (development values - longer expiration for convenience)
JWT_SECRET="dev-jwt-secret-not-for-production-use-32-chars-minimum"
JWT_EXPIRES_IN="24h"
JWT_REFRESH_SECRET="dev-refresh-secret-not-for-production-use-32-chars-minimum"
JWT_REFRESH_EXPIRES_IN="7d"

# AWS S3 Configuration (LocalStack for development)
USE_LOCALSTACK=true
LOCALSTACK_ENDPOINT="http://localstack:4566"
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID="test"
AWS_SECRET_ACCESS_KEY="test"
AWS_S3_BUCKET_NAME="no-de-duas"

# S3 Module Paths (Customizable folder structure)
S3_PRODUCTS_PATH="products"
S3_USERS_PATH="users"
S3_MATERIALS_PATH="materials"

# Upload Configuration
MAX_IMAGES_PER_PRODUCT=3
ALLOWED_FILE_TYPES="jpg,jpeg,png,webp"
MAX_FILE_SIZE_MB=5

# Development specific configurations
LOG_LEVEL=debug
CORS_ORIGIN="http://localhost:3000,http://localhost:3001"
